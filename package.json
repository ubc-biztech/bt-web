{
    "name": "bt-web",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@material-ui/core": "^4.5.1",
        "@material-ui/icons": "^4.5.1",
        "node-sass": "^4.12.0",
        "query-string": "^6.8.3",
        "react": "^16.9.0",
        "react-dom": "^16.9.0",
        "react-redux": "^7.1.1",
        "react-scripts": "3.1.2",
        "redux": "^4.0.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "deploy": "aws s3 sync build/ s3://biztech-web",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "lint": "eslint .",
        "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|md|vue)\""
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "airbnb",
            "prettier"
        ],
        "plugins": [
            "prettier"
        ],
        "rules": {
            "prettier/prettier": "error",
            "import/first": "error"
        }
    },
    "prettier": {
        "printWidth": 90,
        "bracketSpacing": true,
        "trailingComma": "es5",
        "singleQuote": true,
        "arrowParens": "always",
        "semi": false,
        "tabWidth": 4
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "eslint": "^6.1.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-prettier": "^6.5.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-react": "^7.14.3",
        "eslint-plugin-react-hooks": "^1.7.0",
        "prettier": "^1.19.1"
    },
    "lint-staged": {
        "*.+(js|jsx)": [
            "eslint --fix",
            "git add"
        ],
        "*.+(json|css|md|html)": [
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
